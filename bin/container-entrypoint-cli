#!/usr/bin/env bash
set -eo pipefail

export DEBUG=${DEBUG:-false}
[[ "${DEBUG}" == "true" ]] && set -x

source /usr/local/bin/container-entrypoint.d/entrypoint.d/00-functions.sh
source /usr/local/bin/container-entrypoint.d/entrypoint.d/01-php.sh
source /usr/local/bin/container-entrypoint.d/entrypoint.d/99-export-vars.sh

log "INFO" "  ____                   ____  _   _ ____   "
log "INFO" " | __ )  __ _ ___  ___  |  _ \| | | |  _ \  "
log "INFO" " |  _ \ / _\` / __|/ _ \ | |_) | |_| | |_) | "
log "INFO" " | |_) | (_| \__ \  __/ |  __/|  _  |  __/  "
log "INFO" " |____/ \__,_|___/\___| |_|   |_| |_|_|     "
log "INFO" "                                            "
log "INFO" "  ( Smals WebAgency WcmTech Base Image )    "
log "INFO" "                                            "

log "INFO" "+---- Configure PHP Container -----"

source /usr/local/bin/container-entrypoint.d/base.d/01-php.sh
source /usr/local/bin/container-entrypoint.d/base.d/90-cleanup-vars.sh

log "INFO" "+---- PHP Container configured succesfully -----"

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- php "$@"
fi

exec "$@"
